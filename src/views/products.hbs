{{#if user}}
    <br>
    <h2>Bienvenido {{user.first_name}} </h2>
    <br>
{{/if}}

<h3>Product list</h3>

{{#if result.isValid}}
<div>
    <table class="table">
        <thead>
            <tr>
                <th>TÃ­tulo</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Precio</th>
                <th>Miniatura</th>
            </tr>
        </thead>
        <tbody>
            {{#each result.docs}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.category}}</td>
                <td>{{this.price}}</td>
                <td><img height="72px" width="72px" src={{this.thumbnail}} /></td>
                <td><button id="addToCart" type="button" class="btn btn-primary">Add to cart</button></td>
                
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div>
        {{#if result.hasPrevPage}}
        <a href="{{result.prevLink}}">Anterior</a>
        {{/if}}
        {{ page }}
        {{#if result.hasNextPage}}
        <a href="{{result.nextLink}}">Siguiente</a>
        {{/if}}
    </div>

</div>
{{else}}
<h1>No hay products</h1>

{{/if}}

